{
    "name": "binsoul/common-i18n-intl",
    "description": "Implementation of the I18n interfaces using the intl extension",
    "keywords": [
        "common",
        "i18n"
    ],
    "homepage": "https://github.com/binsoul/common-i18n-intl",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Mößler",
            "email": "code@binsoul.de",
            "homepage": "https://github.com/binsoul",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-intl": "*",
        "binsoul/common-i18n": "*@dev"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2",
        "phpstan/phpstan": "^0.11",
        "phpunit/phpunit": "^8"
    },
    "autoload": {
        "psr-4": {
            "BinSoul\\Common\\I18n\\Intl\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BinSoul\\Test\\Common\\I18n\\Intl\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "fix-style": [
            "php-cs-fixer fix src --rules=@Symfony,-yoda_style",
            "php-cs-fixer fix tests --rules=@Symfony,-yoda_style"
        ],
        "analyze": "phpstan analyse -l 7 src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
